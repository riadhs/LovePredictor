<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Love Measurement</title>
  <style>
    /* Basic Reset */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: 'Arial', sans-serif;
      background: linear-gradient(135deg, #ff6f61, #ffcc00);
      min-height: 100vh;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      color: white;
      text-align: center;
      animation: fadeIn 2s ease-out;
      position: relative; /* Ensure the love signs appear behind content */
      overflow: hidden;
    }

    /* Love sign creation with shiny red color */
    .heart {
      position: absolute;
      font-size: 3rem;
      color: #ff0044;
      animation: loveSign 5s infinite alternate;
      opacity: 0.8;
    }

    @keyframes loveSign {
      0% {
        transform: translate(0, 0) scale(1);
        opacity: 1;
      }
      100% {
        transform: translate(20px, 20px) scale(1.3);
        opacity: 0.5;
      }
    }

    .app-name {
  font-size: 4rem;
  color: #fff;
  margin-bottom: 1in; /* 1 inch gap between app name and next element */
  padding: 15px 30px;
  background-color: #ff1493;
  border-radius: 20px;
  text-transform: uppercase;
  font-weight: bold;
  box-shadow: 0 10px 15px rgba(0, 0, 0, 0.3);
  animation: slideIn 2s ease-out;
  letter-spacing: 5px;
}

h1 {
  font-size: 3rem;
  color: #fff;
  margin-bottom: 1in; /* 1 inch gap between heading and form */
  animation: slideIn 1.5s ease-out;
}

    /* Fade-in keyframe for body */
    @keyframes fadeIn {
      0% { opacity: 0; }
      100% { opacity: 1; }
    }

    /* Slide-in animation for heading */
    @keyframes slideIn {
      0% { transform: translateY(-50px); opacity: 0; }
      100% { transform: translateY(0); opacity: 1; }
    }

    /* Form container style */
    form {
      background: rgba(255, 255, 255, 0.7);
      padding: 20px 40px;
      border-radius: 15px;
      box-shadow: 0 10px 15px rgba(0, 0, 0, 0.1);
      animation: fadeInUp 2s ease-in-out;
    }

    /* Fade-in-up form animation */
    @keyframes fadeInUp {
      0% { transform: translateY(50px); opacity: 0; }
      100% { transform: translateY(0); opacity: 1; }
    }

    /* Textarea style */
    textarea {
  width: 100%; /* Keep full width */
  height: 300px; /* Double the current height */
  margin-bottom: 20px;
  padding: 15px;
  border-radius: 10px;
  border: none;
  font-size: 1.2rem;
  resize: none;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
  background-color: #fff;
  color: #333;
}


    /* Textarea hover effect */
    textarea:focus {
      outline: none;
      border: 2px solid #ff6f61;
      box-shadow: 0 4px 10px rgba(255, 111, 97, 0.6);
    }

    /* Button style */
    button {
      padding: 15px 30px;
      border: none;
      border-radius: 50px;
      background-color: #ff6f61;
      color: white;
      font-size: 1.5rem;
      cursor: pointer;
      transition: all 0.3s ease;
      box-shadow: 0 4px 10px rgba(255, 111, 97, 0.3);
    }

    /* Button hover effect */
    button:hover {
      background-color: #ffcc00;
      transform: scale(1.05);
    }

    /* Add glow effect when hovering */
    button:active {
      box-shadow: 0 8px 15px rgba(255, 255, 255, 0.6);
    }

    /* Placeholder animation */
    textarea::placeholder {
      font-style: italic;
      color: #666;
      opacity: 0.8;
      transition: opacity 0.3s ease;
    }

    /* Responsive design */
    @media (max-width: 600px) {
      .app-name {
        font-size: 3rem; /* Smaller font size for smaller screens */
      }
      h1 {
        font-size: 2rem;
      }
      textarea {
        width: 90%;
      }
      button {
        font-size: 1.2rem;
      }
    }
  </style>
</head>
<body>
  <div class="app-name">Love Measurement</div>
  <h1>Submit Your Text</h1>
  <form action="/submit" method="POST">
    <textarea name="textContent" rows="5" cols="50" placeholder="Share your feelings..." required></textarea><br>
    <button type="submit">Submit</button>
  </form>

  <script>
    // Function to generate random positions and create hearts
    function generateHearts(numHearts) {
      for (let i = 0; i < numHearts; i++) {
        let heart = document.createElement("div");
        heart.classList.add("heart");
        heart.textContent = "ðŸ’–";

        // Random positions for each heart
        const xPos = Math.random() * window.innerWidth;
        const yPos = Math.random() * window.innerHeight;
        const animationDuration = Math.random() * (7 - 5) + 5; // Randomize animation time between 5s and 7s

        heart.style.left = `${xPos}px`;
        heart.style.top = `${yPos}px`;
        heart.style.animationDuration = `${animationDuration}s`;

        // Append the heart to the body
        document.body.appendChild(heart);
      }
    }

    // Generate 100 hearts
    generateHearts(50);
  </script>
</body>
</html>
